@model EFcoreApp.Models.Phone
@{
    ViewData["Title"] = "Информация о " + Model.Name;
}

<div class="row">
    <div class="col-md-3">
        <h1>Здесь картинка</h1>
    </div>
    <div class="col-md-6">
        <dl class="dl-horizontal">
            <dt>Производитель</dt>
            <dd>@Model.Company</dd>

            <dt>Цена</dt>
            <dd>@Model.Price</dd>
        </dl>
    </div>
</div>


