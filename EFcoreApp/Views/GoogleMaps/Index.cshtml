@using EFcoreApp.MapsModels
@model IEnumerable<Place>
@{
    ViewData["Title"] = "Список мест";
}
<div>

    <a asp-action="AddPlace" asp-controller="GoogleMaps" class="btn btn-danger" > Добавить еще место</a>
</div>
<h3>Список всех мест</h3>
<div style="margin:0 auto; padding:15px; background-color:#b6ddd5">
    <table 
          style="background-color:#e8e8e8" class="table">
        <thead>
            <tr>
                <th>Заголовок</th>
                <th>Место</th>
                <th>доп.функции</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="show" asp-controller="GoogleMaps" asp-route-place="@item.Id">Подробнее</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-controller="GoogleMaps" asp-route-place=" @item.Id" style="color:red"> Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

